
package javaapplication4;

 



public class Conta {
    
   public int numc;
   protected String tipo;
   private String dono;
   private float saldo;
   private boolean status; 

   
    public Conta() {
        
        this.setSaldo(0);
        this.setStatus(false);
        
    }
   
    public int getNumc() {
        return numc;
    }

    public void setNumc(int numc) {
        this.numc = numc;
    }

    public String getTipo() {
        return tipo;
    }

    public void setTipo(String tipo) {
        this.tipo = tipo;
       
        
    }

    public String getDono() {
        return dono;
    }

    public void setDono(String dono) {
        this.dono = dono;
    }

    public float getSaldo() {
        return saldo;
    }

    public void setSaldo(float saldo) {
        this.saldo = saldo;
    }

    public boolean isStatus() {
        return status;
    }

    public void setStatus(boolean status) {
        this.status = status;
    }
    
    public void abrirConta(String C){
            
            this.setStatus(true);
 
            
           if ("cc".equals(C)){
            this.setTipo(C);
               
            float d=50;
            
            this.setSaldo(d);

        }else if ("cp".equals(C)){    
            
            this.setTipo(C);
            
            float d=150;           
            
            this.setSaldo(d);
            
        }
        System.out.println("Conta Aberta.");
        
    }
    
    public void fecharConta(){
        
        
        if (0==this.getSaldo()){

            this.setStatus(false);
            
            System.out.println("Conta FECHADA!");
            
        } else {
            
            System.out.println("Conta nÃ£o pode ser fechada, existe saldo ou debito em conta.");
            
        }
    }
    
    public void depositar(float din){
        
        if (isStatus()){
        this.setSaldo(din + this.getSaldo());    
        
        }
        
    }
   
    public void sacar(float din){
        
      if (this.isStatus() && this.getSaldo()>=din){
        this.setSaldo(this.getSaldo() - din);
            System.out.println("Saque relizado com sucesso !!!");
    }          else{
                System.out.println("Saldo insuficiente.");
                   }
    }
    
    public void pagarMensalidade(){
        
        if (this.isStatus() && this.getTipo().equals("cc") && this.getSaldo() >=12){
         this.setSaldo(this.getSaldo() - 12);
            System.out.println("Mensalidade Paga.");
        }
        
        if (this.isStatus() && this.getTipo().equals("cp") && this.getSaldo() >=18){
         this.setSaldo(this.getSaldo() - 18);
             System.out.println("Mensalidade Paga.");
        }
       
    }
    
    public void estadoAtual(){
        
        System.out.println("----------------------------------------");
        System.out.println("Conta: " + this.getNumc());
        System.out.println("Tipo: " + this.getTipo());
        System.out.println("Dono: " + this.getDono());
        System.out.println("Saldo: " + this.getSaldo());
        System.out.println("Status: " + this.isStatus());
        
    }
    
}
