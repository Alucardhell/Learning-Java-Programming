
package objeto;



public class TV {
    String modelo;
    String cor;
    boolean ligado;
    int canal;
    int volume;
    
   
    void status(){
       
        System.out.println("TV Cor: " + this.cor);
        System.out.println("Modelo: " + this.modelo);
        
        if (this.ligado == true){
        System.out.println("A TV está ligada.");
        System.out.println("Está no Canal: " + this.canal);
        System.out.println("Volume " + this.volume);
        
    }else {
            System.out.println("TV está desligada");
        }
    }
   
    void mudarCanal(){
        
        this.canal = this.canal + 1;
        System.out.println("Canal " + this.canal);
   
    }
    
    void voltarCanal(){
        
        this.canal = this.canal - 1;
        System.out.println("Canal " + this.canal);
        
    }
       
    void aumentarVolume(){
        
        this.volume = this.volume + 1;
        System.out.println("Volume " + this.volume);
    
        
    }
    
    void diminuirVolume(){
        this.volume = this.volume - 1;
        System.out.println("Volume " + this.volume);
    }
    
}
